{
  "name": "twitter-app",
  "version": "1.0.0",
  "description": "A Twitter-like application",
  "main": "app.js",
  "bin": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:portable": "node build-portable.js",
    "build:pkg": "node build-pkg.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "twitter",
    "express",
    "sqlite"
  ],
  "author": "Twitter App Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.4",
    "pkg": "^5.8.1"
  },
  "binary": {
    "module_path": "./node_modules/sqlite3/lib/binding/napi-v6-win32-x64",
    "host": "https://github.com/",
    "remote_path": "mapbox/node-sqlite3/releases/download/",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz"
  },
  "pkg": {
    "targets": [
      "node16-win-x64",
      "node16-linux-x64",
      "node16-macos-x64"
    ],
    "outputPath": "pkg-dist",
    "assets": [
      "node_modules/sqlite3/**/*",
      "data/*.db",
      "node_modules/sqlite3/lib/binding/napi-v6-win32-x64/node_sqlite3.node"
    ],
    "scripts": [
      "node_modules/sqlite3/lib/*.js",
      "node_modules/sqlite3/lib/**/*.js"
    ]
  }
}